{
  "name": "Takealot Sorter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Sort Takealot results by number of reviews",
  "homepage_url": "https://hypn.za.net",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Sort results!"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "https://takealot.com/*",
    "https://www.takealot.com/*"
  ]
}